---
import { Link } from "../Link";
import { ArrowUpRight } from "../icons/arr-right-up";

const { title, description, projectURL, gitURL, date } = Astro.props;
---

<header class="bg-secondary text-primary py-14 mb-6">
    <div class="max-w-3xl mx-auto px-5 md:px-0">
        <div class="border-b-2 border-accent/70 mb-5 pb-5 flex flex-col md:flex-row md:justify-between">
            <div>
                <h1 class="mb-4 text-2xl font-bold md:text-3xl font-title">
                    {title}
                </h1>
                <p class="text-gray-extralight">{description}</p>
            </div>

            <div class="flex flex-col gap-2 items-end">
                {projectURL ? (
                    <Link extras="icon" size="sm" intent="secondary-light" href={projectURL}>
                    Open Project
                    <ArrowUpRight className="w-4 h-4 fill-primary" />
                    </Link>
                ) : null}
                {gitURL ? (
                <Link extras="icon" size="sm" intent="secondary-light" href={gitURL}>
                    View on GitHub
                    <ArrowUpRight className="w-4 h-4 fill-primary" />
                </Link>
                ) : null}
            </div>
        </div>

        <div style={{ scrollbarWidth: "thin" }} class="flex gap-6 overflow-x-auto">
            <p class="cursor-default min-w-fit">
                <time datetime={date}>{date.toString().slice(0,10)}</time>
            </p>
        </div>
    </div>
</header>
